<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>League</th>
      <th>City</th>
      <th>Stadium</th>
      <th>Foundation Year</th>
      <th>President</th>
      <th>Manager</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= link_to team.name, league_team_path(team.league, team) %></td>
        <td><%= team.league.name %></td>
        <td><%= team.city %></td>
        <td><%= team.stadium %></td>
        <td><%= team.foundation_year %></td>
        <td><%= team.president %></td>
        <td><%= team.manager %></td>
        <td><%= link_to 'Show', league_team_path(team.league, team) %></td>
        <td><%= link_to 'Edit', edit_league_team_path(team.league, team) %></td>
        <td><%= link_to 'Delete', league_team_path(team.league, team), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_league_team_path(@league) %> |
<%= link_to 'Back to Leagues', leagues_path %>