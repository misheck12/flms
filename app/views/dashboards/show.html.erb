<!-- app/views/dashboards/show.html.erb -->

<div class="container-fluid">
  <div class="row">
    <!-- Sidebar Column -->
    <div class="col-md-3">
      <%= render 'dashboard_nav' %>
    </div>

    <!-- Main Content Column -->
    <div class="col-md-9">
      <div class="dashboard-content">
        <h1>Welcome, <%= current_user.name %>!</h1>

        <% if current_user.admin? %>
          <!-- Admin Specific Content (Optional) -->
          <!-- 
            If you have additional admin-specific content to display here,
            you can include it. However, since the admin links are now
            part of the sidebar, this section can be used for other 
            dynamic admin content.
          -->
        <% end %>

        <% if current_user.referee? %>
          <!-- Referee Specific Content (Optional) -->
          <!-- 
            Similarly, include any referee-specific content here.
            The referee navigation links are handled in the sidebar.
          -->
        <% end %>

        <!-- General Dashboard Content -->
        <div class="mt-4">
          <!-- Add any general dashboard widgets, statistics, or information here -->
          <p>This is your dashboard overview. Here you can manage your activities and access various sections based on your role.</p>
          
          <!-- Example Widgets -->
          <div class="row">
            <div class="col-md-6">
              <div class="card mb-4">
                <div class="card-header">
                  Recent Activities
                </div>
                <div class="card-body">
                  <p>No recent activities.</p>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card mb-4">
                <div class="card-header">
                  Notifications
                </div>
                <div class="card-body">
                  <p>No new notifications.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div> <!-- .dashboard-content -->
    </div> <!-- .col-md-9 -->
  </div> <!-- .row -->
</div> <!-- .container-fluid -->