<h1><%= @league.name %> Matches</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Venue</th>
      <th>Home Team</th>
      <th>Away Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.date.strftime("%B %d, %Y %I:%M %p") %></td>
        <td><%= match.venue %></td>
        <td><%= match.home_team.name %></td>
        <td><%= match.away_team.name %></td>
        <td><%= link_to 'Show', league_match_path(@league, match) %></td>
        <td><%= link_to 'Edit', edit_league_match_path(@league, match) %></td>
        <td><%= link_to 'Delete', league_match_path(@league, match), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Match', new_league_match_path(@league) %> |
<%= link_to 'Back to League', @league %>