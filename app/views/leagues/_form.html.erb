<%= form_with(model: league, local: true) do |form| %>
  <% if league.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(league.errors.count, 'error') %> prohibited this league from being saved:</h2>
      <ul>
        <% league.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %><br>
    <%= form.text_area :description, rows: 5 %>
  </div>

  <div class="field">
    <%= form.label :start_date %><br>
    <%= form.date_select :start_date, start_year: Date.today.year, end_year: Date.today.year + 5 %>
  </div>

  <div class="field">
    <%= form.label :end_date %><br>
    <%= form.date_select :end_date, start_year: Date.today.year, end_year: Date.today.year + 5 %>
  </div>

  <div class="field">
    <%= form.label :rules %><br>
    <%= form.text_area :rules, rows: 10 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>