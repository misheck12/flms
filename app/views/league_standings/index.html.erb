<h1><%= @league.name %> Standings</h1>

<table>
  <thead>
    <tr>
      <th>Position</th>
      <th>Team</th>
      <th>Played</th>
      <th>Wins</th>
      <th>Draws</th>
      <th>Losses</th>
      <th>GF</th>
      <th>GA</th>
      <th>GD</th>
      <th>Points</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @standings.each_with_index do |standing, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= standing.team.name %></td>
        <td><%= standing.wins + standing.draws + standing.losses %></td>
        <td><%= standing.wins %></td>
        <td><%= standing.draws %></td>
        <td><%= standing.losses %></td>
        <td><%= standing.goals_scored %></td>
        <td><%= standing.goals_conceded %></td>
        <td><%= standing.goal_difference %></td>
        <td><%= standing.points %></td>
        <td>
          <%= link_to 'Show', [@league, standing] %> |
          <%= link_to 'Edit', edit_league_league_standing_path(@league, standing) %> |
          <%= link_to 'Delete', [@league, standing], method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Standing', new_league_league_standing_path(@league) %> |
<%= link_to 'Back to League', @league %>