<h1>Match Reports</h1>

<table>
  <thead>
    <tr>
      <th>Match</th>
      <th>Referee</th>
      <th>Home Goals</th>
      <th>Away Goals</th>
      <th>Report Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @match_reports.each do |report| %>
      <tr>
        <td><%= link_to report.match.name, [report.league, report.match] %></td>
        <td><%= report.referee.name %></td>
        <td><%= report.home_team_goals %></td>
        <td><%= report.away_team_goals %></td>
        <td><%= truncate(report.report_details, length: 50) %></td>
        <td><%= link_to 'Show', [report.league, report] %></td>
        <td><%= link_to 'Edit', edit_league_match_report_path(report.league, report) %></td>
        <td><%= link_to 'Delete', [report.league, report], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Match Report', new_league_match_report_path(@league) %> |
<%= link_to 'Back to League', @league %>